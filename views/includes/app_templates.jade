script#modal_template(style='display: none')
  //<![CDATA[
  .modal.fade(id="insurance_tip")
    .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true')
            h4.modal-title<%- data.value.manufacturer %> <%- data.value.spz %>
          .modal-body
            p Vozidlo bylo v období <%- data.value.period %> v pořádku pojištěno.
            table
              tr
                th SPZ/RZ vozidla:
                td <%- data.value.spz %>
              tr
                th Druh vozidla:
                td <%- data.value.type %>
              tr
                th Výrobce:
                td <%- data.value.manufacturer %>
              tr
                th Interval pojištění:
                td <%- data.value.period %>
              tr
                th Pojišťovna:
                td <%- data.value.company.name %>
              tr
                th Ověřovací link:
                td
                  a(href!="<%- data.value.url %>", target="_blank") <%- data.value.url %>
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Zavřít
  //]]>

